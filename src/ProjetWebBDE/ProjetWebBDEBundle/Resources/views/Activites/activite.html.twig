{% extends "::layout/layout.html.twig" %}
{% block title %}Détails activité - BDE Exia{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-2"></div>

        <div class="col-xs-12 col-md-8">
            <h2 class="h2">Détails de l'activité :</h2>
            <hr>

    {% for activite in activites |slice(0,1) %}
            <div class="col-xs-12">
                <div class="col-xs-12 col-md-6">
                    <p><label for="activityname">Nom de l'activité :</label>
                        <input class="form-control" type="text" id="activityname" value="{{ activite.nomActivite }}" /></p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="col-xs-12 col-md-offset-1 col-md-11">
                        <div class="col-xs-6">
                            <p><label for="activitydate1">Date :</label>
                                <input class="form-control" type="date" id="activitydate1" value="{{ activite.dateActivite|date('m/d/Y') }}" /></p>
                        </div>
                        <div class="col-xs-6">
                            <p><label for="activitytime1">Heure :</label>
                                <input class="form-control" type="time" id="activitytime1" value="{{ activite.heureActivite|date('H:i') }}" /></p>
                        </div>
                    </div>
                </div>
                <!-- ajout de photo -->
                <div class="col-xs-12">
                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                        <div class="form-inline">
                            <label for="charger_image">Charger une photo</label>
                            <input role="button" type="file" class="form-control-file btn btn-danger active" id="charger_image"><br>
                        </div>
                    {%endif%}
                </div>
            </div>

            <!-- photos de l'activité -->
            <div class="col-xs-12">
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <div class="col-xs-12">
                        <div class="col-md-2"><p align="center"><img class="thumbnail img-responsive" src="{{ asset('img/logo.jpg') }}"></p>
                            <button>Like</button>
                            <button>Comment</button>
                        </div>
                        <div class="col-md-2"><p align="center"><img class="thumbnail img-responsive" src="{{ asset('img/logo.jpg') }}"></p>
                            <button>Like</button>
                            <button>Comment</button>
                        </div>
                        <div class="col-md-2"><p align="center"><img class="thumbnail img-responsive" src="{{ asset('img/logo.jpg') }}"></p>
                            <button>Like</button>
                            <button>Comment</button>
                        </div>
                        <div class="col-md-2"><p align="center"><img class="thumbnail img-responsive" src="{{ asset('img/logo.jpg') }}"></p>
                            <button>Like</button>
                            <button>Comment</button>
                        </div>
                        <div class="col-md-2"><p align="center"><img class="thumbnail img-responsive" src="{{ asset('img/logo.jpg') }}"></p>
                            <button>Like</button>
                            <button>Comment</button>
                        </div>
                        <div class="col-md-2"><p align="center"><img class="thumbnail img-responsive" src="{{ asset('img/logo.jpg') }}"></p>
                            <button>Like</button>
                            <button>Comment</button>
                        </div>
                    </div>
                {%endif%}
            </div>

            <!-- description -->
            <div class="col-xs-12">
                <div id="activity1" class="col-xs-12">
                    <form class="cssform" action="">
                        <div class="col-xs-12">
                            <p><label for="comments1">Description de l'activité :</label></p>
                        </div>
                        <div class="col-xs-12">
                            <textarea class="form-control" id="comments1" rows="5" cols="25">{{ activite.descriptionActivite }}</textarea>
                        </div>
                    </form>
                </div>
            </div>
        {% endfor %}


        </div>

        <div class="col col-xs-12 col-md-2"></div>
    </div>

    <div id="popupinformation" title="Inscription">
        <p>Avez vous une remarque à nous soumettre ?</p>
        <textarea class="form-control" title="Inscription" id="textarea" rows="5" cols="25"></textarea>
    </div>

{% endblock %}
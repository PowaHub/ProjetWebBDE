{% extends "::layout/layout.html.twig" %}
{% block title %}Création activité - BDE Exia{% endblock %}

{% block body %}


    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <h2 class="h2">Créer une activité !</h2>
            <hr>

            <div id="activity" class="col-md-12 col-lg-12">
                <form class="cssform" action="">

                    <div class="row">
                        <div class="col-md-5 col-lg-5">
                            <p><label for="activityname">Nom de l'activité :</label>
                                <input class="form-control" type="text" id="activityname" value="" /></p>

                            <p><label for="activityplace">Lieu :</label>
                                <input class="form-control" type="text" id="activityplace" value="" /></p>

                            <p><label for="activityprice">Prix :</label>
                                <input class="form-control" type="email" id="activityprice" value="" /></p>
                        </div>
                        <div class="col-md-7 col-lg-7">
                            <div class="col-lg-offset-1 col-md-11 col-lg-11">
                                <p>Champs à saisir (1 minimum)</p>
                                <div class="row">
                                    <div class="col-md-6 col-lg-6">
                                        <p><label for="activitydate1">Date :</label>
                                            <input  type="date" id="activitydate1" value="" /></p>
                                    </div>
                                    <div class="col-md-6 col-lg-6">
                                        <p><label for="activitytime1">Heure :</label>
                                            <input  type="time" id="activitytime1" value="" /></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <p><label for="comments">L'activité est-elle récurente ? </label></br>
                                        Oui <input type="radio" name="activityrecurenceY" />
                                        Non <input type="radio" name="activityrecurenceN" /></p>
                                    <p><label for="activityrecurence">Si oui, indiquer la récurence : </label></br>
                                        <input class="form-control" type="email" id="activityrecurence" value="" /></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div id="description" class="col-md-12 col-lg-12">
                            <p><label for="comments">Description :</label>
                                <textarea class="form-control" id="comments" rows="5" cols="25"></textarea></p>
                        </div>
                    </div>

                    <div class="row">
                        <p align="center"><button type="submit" class="btn btn-default btn-md">Soumettre</button></p>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}
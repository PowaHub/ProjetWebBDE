{% extends "::layout/layout.html.twig" %}
{% block title %}Les activités - BDE Exia{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-offset-2 col-md-8 col-lg-8">
            <h2 class="h2">Nos activités : </h2>
            <hr>

            <div class="row">
                <div class="col-md-2 col-lg-2">
                    <p> <a href="{{ path('nouvelle_activite') }}" class="newactivity">Les activités à venir</a></p>
                </div>

                <div class="row">
                    <div id="activity1" class="col-md-8 col-lg-8">
                        <form class="cssform" action="">

                            <div class="row">
                                <p><a target="_blank" href="{{ path('activite') }}">Nom de l'activité</a></p>
                                <p><label for="comments1">Description :</label>
                            </div>
                            <div class="row">
                                <div class="col-md-8 col-lg-8">
                                        <textarea class="form-control" id="comments1" rows="5" cols="25"></textarea></p>
                                </div>
                                <div class="col-md-3 col-lg-3">
                                    <p align="center"><img src="{{ asset('img/logo.jpg') }}"></p>
                                </div>
                                <div id="vote" class="col-md-1 col-lg-1">
                                    <button type="submit" class="btn btn-default btn-md" id="popupinscription">S'inscrire</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2 col-lg-2">
                    <p> <a href="{{ path('ancienne_activite') }}" class="oldactivity">Les activités passées</a></p>
                </div>

                <div class="row">
                    <div id="activity2" class="col-md-8 col-lg-8">
                        <form class="cssform" action="">

                            <div class="row">
                                <p><a target="_blank" href="{{ path('activite') }}">Nom de l'activité</a></p>
                                <p><label for="comments2">Description :</label>
                            </div>
                            <div class="row">
                                <div class="col-md-8 col-lg-8">
                                    <textarea class="form-control" id="comments2" rows="5" cols="25"></textarea></p>
                                </div>
                                <div class="col-md-3 col-lg-3">
                                    <p align="center"><img src="{{ asset('img/logo.jpg') }}"></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popupinformation" title="Inscription">
        <p>Avez vous une remarque à nous soumettre ?</p>
        <textarea class="form-control" id="textarea" rows="5" cols="25"></textarea>
    </div>
    
{% endblock %}
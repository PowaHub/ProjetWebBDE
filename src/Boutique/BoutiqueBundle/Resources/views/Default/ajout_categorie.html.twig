{% extends "::layout/layout.html.twig" %}
{% block title %}Ajout catégorie - BDE Exia{% endblock %}

{% block body %}

    <br>
    <div class="row">
        <!-- espace -->
        <div class="col-xs-2"></div>
        <!-- contenu de la page -->
        <div class="col-xs-8">
            <div class="col-xs-12"><h4 class="produit">Ajouter une catégorie</h4></div>

            <div class="col-xs-12">
                <div class="col-lg-4"></div>
                <div class="col-lg-4 form"><input type="id_cat" class="form-control" id="id_cat"></div>
                <div class="col-lg-4 form"><label for="id_cat">ID de la catégorie</label></div>
            </div>
            <div class="col-xs-12">
                <div class="col-lg-4"></div>
                <div class="col-lg-4 form"><input type="nom_art" class="form-control" id="nom_art"></div>
                <div class="col-lg-4 form"><label for="nom_art">Nom de la catégorie</label></div>
            </div>
            <div class="col-xs-12">
                <div class="col-lg-4"></div>
                <div class="col-lg-4 produit"><button type="submit" class="btn btn-danger active">Envoyer</button></div>
                <div class="col-lg-4"></div>
            </div>

        </div>
        <!-- espace -->
        <div class="col-xs-2"></div>
    </div>
</div>

{% endblock %}